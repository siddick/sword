<h1>Listing roles</h1>

<table class='listview' >
  <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Frozen role</th>
        <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

<% @roles.each do |role| %>
  <tr>
    <td><%= role.name %></td>
    <td><%= role.description %></td>
    <td><%= role.frozen_role %></td>
    <td><%= link_to 'Show', role %></td>
    <td><%= link_to 'Edit', edit_role_path(role) %></td>
    <td><%= link_to 'Destroy', role, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

  </tbody>
  <tfoot>
    <tr><td colspan=3 > <%= will_paginate @roles %> </td></tr>
  </tfoot>

</table>

<br />

<%= link_to 'New Role', new_role_path %>
