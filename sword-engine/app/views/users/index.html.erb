<h1>Listing users</h1>

<table class='listview' >
  <thead>
    <tr>
        <th>Username</th>
        <th>Md5 password</th>
        <th>Fullname</th>
        <th>Enable</th>
        <th>Options</th>
        <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.md5_password %></td>
    <td><%= user.fullname %></td>
    <td><%= user.enable %></td>
    <td><%= user.options %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

  </tbody>
  <tfoot>
    <tr><td colspan=5 > <%= will_paginate @users %> </td></tr>
  </tfoot>

</table>

<br />

<%= link_to 'New User', new_user_path %>
