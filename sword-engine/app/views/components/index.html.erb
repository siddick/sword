<h1>Listing components</h1>

<table class='listview' >
  <thead>
    <tr>
        <th>Name</th>
        <th>Context</th>
        <th>Description</th>
        <th>Controller</th>
        <th>Menu view</th>
        <th>Options</th>
        <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

<% @components.each do |component| %>
  <tr>
    <td><%= component.name %></td>
    <td><%= component.context %></td>
    <td><%= component.description %></td>
    <td><%= component.controller %></td>
    <td><%= component.menu_view %></td>
    <td><%= component.options %></td>
    <td><%= link_to 'Show', component %></td>
    <td><%= link_to 'Edit', edit_component_path(component) %></td>
    <td><%= link_to 'Destroy', component, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

  </tbody>
  <tfoot>
    <tr><td colspan=6 > <%= will_paginate @components %> </td></tr>
  </tfoot>

</table>

<br />

<%= link_to 'New Component', new_component_path %>
